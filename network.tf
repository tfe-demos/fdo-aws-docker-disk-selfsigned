# Create SGs
resource "aws_security_group" "allow_all" {
  name        = "Allow All"
  description = "Allow all Incoming and Allow all Outgoing"
  ingress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}